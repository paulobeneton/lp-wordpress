---
interface Props {
	title: string;
}
const { title } = Astro.props;
---
<!doctype html>
<html lang="pt-BR" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
	</head>
	<body class="bg-gray-50 text-gray-900 font-sans">
		<slot />
	</body>
</html>